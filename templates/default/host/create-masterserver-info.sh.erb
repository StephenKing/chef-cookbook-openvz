#!/bin/sh

# Generated by Chef for <%= node[:hostname] %>
#
# Write /etc/masterserver with the name of this host
# into every VE on this server.

export PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

VELIST=$(vzlist -a -H -o veid)

if [ -n "$VELIST" ]; then
	for VEID in $VELIST; do
		echo "<%= node[:fqdn] %>" > /var/lib/vz/private/$VEID/etc/masterserver
	done
fi
